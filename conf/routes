# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.LoginController.login
POST    /login                      controllers.LoginController.authenticate(request:  play.mvc.Http.Request)

POST    /logout                     controllers.LoginController.logout

GET     /main                       controllers.HomeController.main
GET     /login                      controllers.HomeController.login
GET     /profile                    controllers.HomeController.profile
GET     /highscore                  controllers.HomeController.highscore
GET     /signup                     controllers.HomeController.signup()

GET     /quiz                       controllers.QuizController.index
# In der routes-Datei

GET     /quiz/question/:id          controllers.QuizController.showQuestion(id: String)
POST    /quiz/submit/:id            controllers.QuizController.submitAnswer(id: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

POST    /saveResult             controllers.HomeController.handleResult(request:  play.mvc.Http.Request)

# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                       controllers.LoginController.login
POST        /login                  controllers.LoginController.authenticate(request:  play.mvc.Http.Request)

POST        /logout                 controllers.LoginController.logout

GET         /profile                controllers.HomeController.profile
GET         /highscore              controllers.HomeController.highscore
GET         /signup                 controllers.HomeController.signup()

GET         /quiz                   controllers.QuizController.quiz
GET         /getNextQuestion        controllers.QuizController.getNextQuestion
POST        /checkAnswer            controllers.QuizController.checkAnswer(request: play.mvc.Http.Request)
POST        /saveQuizResult         controllers.QuizController.handleResult(request:  play.mvc.Http.Request)

GET         /getHighscore           controllers.HomeController.getHighscoreFromSession(request:  play.mvc.Http.Request)

GET         /friendProfile/:name    controllers.HomeController.friendProfile(name: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)

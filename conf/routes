# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                       controllers.LoginController.login
POST        /login                  controllers.LoginController.authenticate(request:  play.mvc.Http.Request)

GET         /signup                 controllers.LoginController.signUp
POST        /signup                 controllers.LoginController.createUser(request:  play.mvc.Http.Request)
POST        /logout                 controllers.LoginController.logout


GET         /profile                controllers.HomeController.profile(request: play.mvc.Http.Request)
GET         /friendProfile/:id      controllers.HomeController.friendProfile(id: Int)

GET         /shop                   controllers.ShopController.shop(request: play.mvc.Http.Request)
GET         /getAvailableCoins      controllers.ShopController.getAvailableCoins(request: play.mvc.Http.Request)
POST        /setNewCoins            controllers.ShopController.setNewCoins(request: play.mvc.Http.Request)


GET         /highscore              controllers.ScoreboardController.highscore()
GET         /getHighscore           controllers.ScoreboardController.getHighscoreFromSession(request:  play.mvc.Http.Request)
POST        /highscoreByQuizName    controllers.ScoreboardController.renderHighscore(request: play.mvc.Http.Request)

GET         /quizView               controllers.QuizController.quizView(request: play.mvc.Http.Request)
GET         /quizSelection          controllers.QuizController.quizSelection
GET         /getNextQuestion        controllers.QuizController.getNextQuestion
GET         /getCorrectAnswer       controllers.QuizController.getCorrectAnswer
POST        /checkAnswer            controllers.QuizController.checkAnswer(request:  play.mvc.Http.Request)
POST        /saveQuizResult         controllers.QuizController.handleResult(request:  play.mvc.Http.Request)
POST        /selectQuiz             controllers.QuizController.selectQuiz(request: play.mvc.Http.Request)
GET         /useFiftyFiftyJoker     controllers.QuizController.useFiftyFiftyJoker(request: play.mvc.Http.Request)
GET         /usePauseJoker          controllers.QuizController.usePauseJoker(request: play.mvc.Http.Request)
GET         /useDoublePointsJoker   controllers.QuizController.useDoublePointsJoker(request: play.mvc.Http.Request)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)

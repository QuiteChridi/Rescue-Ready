# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.login
GET     /main                       controllers.HomeController.main
GET     /login                      controllers.HomeController.login
GET     /profile                    controllers.HomeController.profile
GET     /highscore                  controllers.HomeController.highscore
GET     /logout                     controllers.HomeController.logout(request: play.mvc.Http.Request)
GET     /signup                     controllers.HomeController.signup()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

POST    /login                      controllers.HomeController.authenticate(request:  play.mvc.Http.Request)
POST    /saveResult             controllers.HomeController.handleResult(request:  play.mvc.Http.Request)
